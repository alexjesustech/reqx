# Maintainer: reqx contributors
pkgname=reqx
pkgver=0.1.0
pkgrel=1
pkgdesc="CLI-first API client for developers"
arch=('x86_64' 'aarch64')
url="https://github.com/reqx/reqx"
license=('MPL2')
depends=('openssl')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/reqx/reqx/archive/v$pkgver.tar.gz")
sha256sums=('PLACEHOLDER')

build() {
    cd "$pkgname-$pkgver"
    cargo build --release --locked
}

package() {
    cd "$pkgname-$pkgver"
    install -Dm755 target/release/reqx "$pkgdir/usr/bin/reqx"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
